<h2>
  Accounts
</h2>

<div class="row">
  <div class="span4">
    <table class="table">
      <thead>
        <td>
          Name
        </td>
        <td>
          Balance
        </td>
      </thead>
      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td>
              <%= link_to account.name, account_path(account) %>
            </td>
            <td>
              <%= account.balance %>
            </td>
          </tr>
        <% end %>
        <tr>
          <td>Total Balance:</td>
          <td> <%= current_user.total_balance %> </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
